{% extends "templates/layout.jinja2" %}
{% block content %}
<p>
    <form class="form-inline"
          action="{{ request.referrer }}/update_item"
          method="POST">
        <div class="form-group">
            <input class="form-control" name="document_title"
                   placeholder="New document title..." value="{{ context.title }}"/>
            <input class="form-control" name="document_text"
                   placeholder="New document text..." value="{{ context.text }}"/>
        </div>
        <input type="submit" class="btn" value="Add Document"/>
    </form>
</p>
{% endblock content %}